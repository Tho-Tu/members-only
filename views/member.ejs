<h1><%= title %></h1>

<% if (locals.user && locals.user.member_status === true) { %>
<p>You are already a member.</p>
<% } else if (locals.user &&locals.user.member_status === false) { %>
<form action="member" method="POST">
  <div class="form-group">
    <label for="member-secret">Secret Word</label>
    <input
      type="text"
      class="form-control"
      id="member-secret"
      name="member-secret"
    />
  </div>
  <button type="submit" class="button-submit">Submit</button>
</form>
<% } else { %>
<p>You are not logged in.</p>
<% } %> <% if (locals.errors) { %>
<ul>
  <% errors.forEach(function(error) { %>
  <li><%= error.msg %></li>
  <% }); %>
</ul>
<% } %>
