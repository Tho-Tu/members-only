<h1><%= title %></h1>

<% if (locals.user && locals.user.admin_status === true) { %>
<p>You are already an admin.</p>
<% } else if (locals.user &&locals.user.admin_status === false) { %>
<form method="POST">
  <div class="form-group">
    <label for="admin-secret">Secret Word</label>
    <input
      type="text"
      class="form-control"
      id="admin-secret"
      name="admin-secret"
    />
  </div>
  <button type="submit" class="button-submit">Submit</button>
</form>
<% } else { %>
<p>You are not logged in.</p>
<% } %> <% if (locals.errors) { %>
<ul>
  <% errors.forEach(function(error) { %>
  <li><%= error.msg %></li>
  <% }); %>
</ul>
<% } %>
